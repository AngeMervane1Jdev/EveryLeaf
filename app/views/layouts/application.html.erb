<!DOCTYPE html>
<html>
  <head>
    <title>Manyou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <% if logged_in? %>
        <%= link_to 'Lister', tasks_path %>
        <%= link_to 'Ma page', user_path(current_user.id) %>
        <%= link_to 'Log out', session_path(current_user.id), method: :delete, data: {confirm: 'Are you sure you want to log out?'} %>
        <% if current_user.admin %>
          <%= link_to 'la gestion', admin_users_path %>
        <% end %>
      <% else %>
        <%= link_to 'user registration', new_user_path %>
        <%= link_to 'Login', new_session_path %>
      <% end %>
    </header>
    <div class="flash_message">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
